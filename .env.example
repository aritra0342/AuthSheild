AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_mgmt_client_id
AUTH0_CLIENT_SECRET=your_mgmt_client_secret
AUTH0_AUDIENCE=https://your-tenant.auth0.com/api/v2/

MONGO_URI=mongodb://localhost:27017
MONGO_DB=authshield

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ── Algorand Blockchain ──────────────────────────────────────────────────────
# Network: testnet | mainnet | localnet
ALGORAND_NETWORK=testnet
# 25-word mnemonic for the signing account (generate via /api/blockchain/generate-wallet)
ALGORAND_MNEMONIC=word1 word2 word3 ... word25
# Algod node & indexer (defaults to Algonode free public endpoints)
ALGORAND_NODE=https://testnet-api.algonode.cloud
ALGORAND_INDEXER=https://testnet-idx.algonode.cloud

# ── Risk Thresholds ──────────────────────────────────────────────────────────
CLUSTER_SIZE_THRESHOLD=5
SIMILARITY_THRESHOLD=0.85
RISK_SCORE_THRESHOLD=0.7
AUTOENCODER_THRESHOLD=0.1
